class Axis {
  void update() {
    //x red
    stroke(255, 0, 0);
    line(-1000, 0, 0, 1000, 0, 0);
    strokeWeight(1);
    
    //y green
    stroke(0, 255, 0);
    line(0, -1000, 0, 0, 1000, 0);
    strokeWeight(1);

    //z blue
    stroke(0, 0, 255);
    line(0, 0, -1000, 0, 0, 1000);
    strokeWeight(1);
  }
}
